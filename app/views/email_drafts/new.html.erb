<!-- app/views/email_drafts/new.html.erb -->
<div style="margin: 20px;">
  <h1>New Email Draft</h1>
  <div>
    <textarea id="draft-text" class="form-control" rows="10"><%= @default_text %></textarea>
  </div>
  <div>
    <button style="margin-top: 10px;", id="copy-button" class="btn btn-primary">Copy Draft</button>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const copyButton = document.getElementById('copy-button');
    const draftText = document.getElementById('draft-text');

    copyButton.addEventListener('click', function() {
      draftText.select();
      document.execCommand('copy');
      alert('Draft copied to clipboard!');
    });
  });
</script>
