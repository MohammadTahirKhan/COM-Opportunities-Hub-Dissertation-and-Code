<div> 
  <%= form_for @user , url: admin_path(@user), method: :put do |f| %>
    <%= f.label :role, style: 'margin: 15px; font-size: 20px;' %>
    <%= f.select :user_role, options_for_select([['Admin', '2'], ['User', '0'], ['Poster', '1']]), class: 'form-control', style: 'margin: 15px; width: 100px;, font-size: 20px;' %>
    <%= f.submit 'Update', class: 'btn btn-primary', style: 'margin: 10px; float: inline-end;' %>
  <% end %>
</div>
