<div class="form_containers">
  <div class="logo-container">
    <%= image_pack_tag 'images/tuoslogo.png', alt: 'TUOS Logo', class: 'form-logo', style: 'width: 200px;' %>
    <h2 style = "color: #00539f;">Com Opportunities,<br>University of Sheffield</h2>
  </div>

  <div class="signup-container">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label_html: { class: "input-label" } %>

        <%= f.input :full_name,
                    autofocus: true,
                    input_html: { autocomplete: "full_name" },
                    label_html: { class: "input-label" } %>

        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" },
                    label_html: { class: "input-label" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password" },
                    label_html: { class: "input-label" } %>

        <%= f.input :user_role,
                    as: :boolean,
                    label: "Are you here to post an opportunity?",
                    label_html: { class: "checkbox-label" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign up", id: "signup-button", class: "submit-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links", class: "signup-links" %>
  </div>
</div>