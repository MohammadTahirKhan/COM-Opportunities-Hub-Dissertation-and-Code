<div class="form_containers">
  <div class="logo-container">
    <%= image_pack_tag 'images/tuoslogo.png', alt: 'TUOS Logo', class: 'form-logo', style: 'width: 200px;' %>
    <h2 style = "color: #00539f;">Com Opportunities,<br>University of Sheffield</h2>
  </div>

  <div class="forgot-password-form-container">
    <h2>Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label_html: { class: "form-label" },
                    wrapper_html: { class: "form-group" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>