<div class="form_containers">
  <div class="logo-container">
    <%= image_pack_tag 'images/tuoslogo.png', alt: 'TUOS Logo', class: 'form-logo', style: 'width: 200px;' %>
    <h2 style = "color: #00539f;">Com Opportunities,<br>University of Sheffield</h2>
  </div>

  <div class="login-container">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    label_html: { class: "input-label" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    label_html: { class: "input-label" } %>
        <%= f.input :remember_me, as: :boolean, label: "Remember me", label_html: { class: "checkbox-label" } if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "submit-button" %>
      </div>
    <% end %>

    <%= render "devise/shared/links", class: "login-links" %>
  </div>
</div>
